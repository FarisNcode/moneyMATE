<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".RegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="51dp"
            android:layout_height="50dp"
            android:layout_marginStart="-15dp"
            android:layout_marginTop="8dp"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Kembali"
            android:scaleType="centerInside"
            android:src="@drawable/back_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgWave"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="60dp"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create\nAccount"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:lineSpacingExtra="5sp"
            app:layout_constraintTop_toTopOf="@id/imgWave"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp" />

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Username"
            android:textSize="16sp"
            android:background="@drawable/edittext_background"
            android:paddingStart="15dp"
            android:textColorHint="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/tvWelcome"
            android:layout_marginTop="30dp" />

        <EditText
            android:id="@+id/etTelp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Phone"
            android:textSize="16sp"
            android:background="@drawable/edittext_background"
            android:paddingStart="15dp"
            android:textColorHint="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/etUsername"
            android:layout_marginTop="20dp" />

        <EditText
            android:id="@+id/etNorek"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="No rek"
            android:textSize="16sp"
            android:background="@drawable/edittext_background"
            android:paddingStart="15dp"
            android:textColorHint="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/etTelp"
            android:layout_marginTop="20dp" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Password"
            android:textSize="16sp"
            android:background="@drawable/edittext_background"
            android:paddingStart="15dp"
            android:inputType="textPassword"
            android:textColorHint="@color/gray"
            android:drawableEnd="@drawable/chevron_right_24"
            app:layout_constraintTop_toBottomOf="@id/etNorek"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/tvForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password?"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etPassword"
            android:layout_marginTop="10dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegis"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="120dp"
            android:backgroundTint="@android:color/transparent"
            app:strokeColor="@color/bluee"
            app:strokeWidth="2dp"
            android:text="Registrasi"
            android:textColor="@color/bluee"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvForgotPassword"
            tools:layout_editor_absoluteX="30dp" />

        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="196dp"
            android:text="Sudah punya akun? Login di sini"
            android:textColor="@color/bluee"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvForgotPassword" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
