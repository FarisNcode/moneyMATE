<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <!-- Toolbar with Title and Settings Icon -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="moneyMATE"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"/>

        <!-- Settings Icon in the Top Right Corner -->
        <ImageView
            android:id="@+id/settingsIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/account"
            android:contentDescription="Settings"
            android:layout_gravity="end|center_vertical"
            android:padding="8dp"
            android:paddingEnd="16dp"/>
    </androidx.appcompat.widget.Toolbar>

    <!-- Welcome Text and User Name -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:padding="8dp"
        android:text="Welcome"
        android:textColor="@color/lightblue"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:padding="4dp"
        android:text="Muhammad Faris Nashwan Wahyudi"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcomeText" />

    <TextView
        android:id="@+id/userPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:padding="4dp"
        android:text="Telp: 081233639342"
        android:textColor="@color/lightblue"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userName" />

    <!-- Balance Display (Rekening dan Saldo dalam CardView dengan Garis Pinggir) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/rekeningCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/userPhone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="@color/white"
        app:strokeWidth="2dp"
        app:strokeColor="@color/blue"> <!-- Stroke for border -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/balanceText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:text="Rekening: 019-120-0780"
                android:textColor="@color/lightblue"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/balanceAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingStart="15dp"
                android:text="IDR 1.000.000.00"
                android:textColor="@color/blue"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- Cek Pengeluaran Button -->
            <Button
                android:id="@+id/checkExpenses"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/blue"
                android:padding="8dp"
                android:paddingEnd="25dp"
                android:text="History >"
                android:textColor="@color/white"
                android:gravity="end" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- New Section with two cards for Pendapatan and Pengeluaran -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@id/rekeningCard">

        <!-- Pendapatan Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/blue"
            app:strokeWidth="2dp"> <!-- Added stroke for border -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/incomeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pendapatan"
                    android:textColor="@color/lightblue"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/incomeAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IDR 700.000.00"
                    android:textColor="@color/blue"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Pengeluaran Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white"
            app:strokeWidth="2dp"
            app:strokeColor="@color/blue"> <!-- Added stroke for border -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp">

                <TextView
                    android:id="@+id/expenseTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pengeluaran"
                    android:textSize="14sp"
                    android:textColor="@color/lightblue"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/expenseAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IDR 300.000.00"
                    android:textSize="18sp"
                    android:textColor="@color/blue"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Form to Add Pendapatan and Pengeluaran -->
    <!-- Form to Add Pendapatan and Pengeluaran -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/rekeningCard"
        tools:layout_editor_absoluteX="16dp">

        <!-- Pendapatan Form -->
        <TextView
            android:id="@+id/addIncomeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Pendapatan"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Input Nominal Pendapatan -->
        <EditText
            android:id="@+id/editIncome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border"
            android:hint="Masukkan jumlah pendapatan (e.g., 500,000)"
            android:inputType="numberDecimal"
            android:padding="10dp" />

        <!-- Input Deskripsi Pendapatan -->
        <EditText
            android:id="@+id/editIncomeDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border"
            android:hint="Sumber pendapatan (e.g., gaji, bonus, bisnis)"
            android:inputType="text"
            android:padding="10dp"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/saveIncomeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/blue"
            android:padding="8dp"
            android:text="Simpan Pendapatan"
            android:textColor="@color/white" />

        <!-- Pengeluaran Form -->
        <TextView
            android:id="@+id/addExpenseLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Tambah Pengeluaran"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Input Nominal Pengeluaran -->
        <EditText
            android:id="@+id/editExpense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border"
            android:hint="Masukkan jumlah pengeluaran (e.g., 200,000)"
            android:inputType="numberDecimal"
            android:padding="10dp" />

        <!-- Input Deskripsi Pengeluaran -->
        <EditText
            android:id="@+id/editExpenseDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border"
            android:hint="Keperluan pengeluaran (e.g., makan, transportasi, belanja)"
            android:inputType="text"
            android:padding="10dp"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/saveExpenseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/blue"
            android:padding="8dp"
            android:text="Simpan Pengeluaran"
            android:textColor="@color/white" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
