<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HistoryActivity">

    <!-- Toolbar with Title and Settings Icon -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="moneyMATE"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"/>

        <!-- Settings Icon in the Top Right Corner -->
        <ImageView
            android:id="@+id/settingsIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/account"
            android:contentDescription="Settings"
            android:layout_gravity="end|center_vertical"
            android:padding="8dp"
            android:paddingEnd="16dp"/>
    </androidx.appcompat.widget.Toolbar>

    <!-- History Transaction Title -->
    <TextView
        android:id="@+id/historyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History Transactions"
        android:textSize="18sp"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"/>

    <!-- Transactions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/historyTitle"
        android:padding="8dp">

        <!-- Month: February -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="February"
            android:textSize="16sp"
            android:textColor="@color/darkgray"
            android:textStyle="bold"
            android:background="@color/gray"
            android:padding="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- Transaction 1 (Income) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="2dp">

            <!-- Date -->
            <TextView
                android:id="@+id/transaction1_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_gravity="start|center_vertical"
                android:layout_marginEnd="16dp"/>

            <!-- Description -->
            <TextView
                android:id="@+id/transaction1_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Purchase at Store A"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_gravity="start|center_vertical"
                android:layout_marginEnd="16dp"/>

            <!-- Separator Line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="8dp"/>

            <!-- Amount (IDR) -->
            <TextView
                android:id="@+id/transaction1_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IDR 100,000"
                android:textSize="16sp"
                android:textColor="@color/blue"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_gravity="start|center_vertical"/>
        </LinearLayout>

        <!-- Transaction 2 (Expense) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="2dp">

            <!-- Date -->
            <TextView
                android:id="@+id/transaction2_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_gravity="start|center_vertical"
                android:layout_marginEnd="16dp"/>

            <!-- Description -->
            <TextView
                android:id="@+id/transaction2_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refund for Item B"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_gravity="start|center_vertical"
                android:layout_marginEnd="16dp"/>

            <!-- Separator Line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="8dp"/>

            <!-- Amount (IDR) -->
            <TextView
                android:id="@+id/transaction2_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IDR 50,000"
                android:textSize="16sp"
                android:textColor="@color/red"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_gravity="start|center_vertical"/>
        </LinearLayout>

        <!-- Month: February -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maret"
            android:textSize="16sp"
            android:textColor="@color/darkgray"
            android:textStyle="bold"
            android:background="@color/gray"
            android:padding="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- Transaction 1 (Income) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="2dp">

            <!-- Date -->
            <TextView
                android:id="@+id/transaction1_date_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_gravity="start|center_vertical"
                android:layout_marginEnd="16dp"/>

            <!-- Description -->
            <TextView
                android:id="@+id/transaction1_description_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Purchase at Store A"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_gravity="start|center_vertical"
                android:layout_marginEnd="16dp"/>

            <!-- Separator Line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="8dp"/>

            <!-- Amount (IDR) -->
            <TextView
                android:id="@+id/transaction1_amount_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IDR 150,000"
                android:textSize="16sp"
                android:textColor="@color/blue"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_gravity="start|center_vertical"/>
        </LinearLayout>

        <!-- Transaction 2 (Expense) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="2dp">

            <!-- Date -->
            <TextView
                android:id="@+id/transaction2_date_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_gravity="start|center_vertical"
                android:layout_marginEnd="16dp"/>

            <!-- Description -->
            <TextView
                android:id="@+id/transaction2_description_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refund for Item B"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_gravity="start|center_vertical"
                android:layout_marginEnd="16dp"/>

            <!-- Separator Line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="8dp"/>

            <!-- Amount (IDR) -->
            <TextView
                android:id="@+id/transaction2_amount_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IDR 50,000"
                android:textSize="16sp"
                android:textColor="@color/blue"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_gravity="start|center_vertical"/>
        </LinearLayout>
        <!-- More Transactions ... -->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
